#center
  .boxed
    %h1.heading
      Add Image
    %p
      Upload new image from your computer
    %table.new
      - form_for(:image, :url=> images_path, :html=> {:multipart => true}) do |f|
        %tr
          %td 
            = f.error_messages
        %tr
          %td 
            Filename (images only): 
          %td 
            = f.file_field :uploaded_data 
        %tr
          %td 
            Caption:
          %td 
            = f.text_field :caption
        %tr.bottomrow
          %td 
            = f.submit "Add" 

    %p
      = link_to '<< Cancel', :controller=>'admin', :action=>'images'
