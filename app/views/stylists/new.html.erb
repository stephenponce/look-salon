<div id='post'>
  <h1 class='title'> New Staff </h1>
  <p class='byline'> Page 1 of 2 </p>
  <div class='entry'>
    <p>
      <% form_for(@stylist) do |f| %>
        <%= f.error_messages %>
 	<p>
 	  <%= f.label :name %><br />
 	  <%= f.text_field :name %>
 	</p>
 	<p>
	  <%= f.label :bio %><br />
	  <%= f.text_area :bio, :rows=>6 %>
	</p>

	<p>
	  <%= f.submit "Create" %>
	</p>
      <% end %>
    </p>
    <%= link_to 'Back', stylists_path %>
  </div>
</div>
