<h1>Editing promos</h1>

<% form_for(@promos) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :valid_date %><br />
    <%= f.date_select :valid_date %>
  </p>
  <p>
    <%= f.label :is_valid %><br />
    <%= f.check_box :is_valid %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @promos %> |
<%= link_to 'Back', promos_path %>
